<%- include("partials/header.ejs") %>

<div class="content" data-offset-top="200">
<h2>Main Competitions</h2>
<br>
<br>
<form action="/submit" method="post">
<label for="comps">Choose a competition:</label>
<br>
<br>
<select name="comps" id="comps" style="padding: 5px;">
  <option value="ENGLAND: Premier League">🏴󠁧󠁢󠁥󠁮󠁧󠁿 Premier League</option>
  <option value="ITALY: Serie A">🇮🇹 Serie A</option>
  <option value="SPAIN: La Liga">🇪🇸 La Liga</option>
  <option value="GERMANY: Bundesliga">🇩🇪 Bundesliga</option>
  <option value="FRANCE: Ligue 1">🇫🇷 Ligue 1</option>
</select>
<input type="submit" style="padding: 5px;" value="Submit" />
</form>

<h3><a href="all" style="color: white;">Or watch all the matches</a></h3>
</div>
<br>
<div class="latest container">
     <h2>Latest match: <%= title = result.data.response[0].title; %></h2>
     <h3><%= competition = result.data.response[0].competition; %> </h3>
     <p><%= date = result.data.response[0].date; %></p>
     <div class="video"><%- video = result.data.response[0].videos[0].embed; %></div>
    </div>

<%- include("partials/footer.ejs") %>

</body>
</html>